[Unit]
Description=DirPic-Subscriber
After=network.target

[Service]
WorkingDirectory=/home/dirpic/subscriber/runtime
RootDirectory=/home/dirpic/subscriber/root
User=dirpic
Group=dirpic
Type=simple
Restart=always
ExecStart=/usr/bin/sudo /usr/bin/dirpicsubscriber -root=/home/dirpic/root
ExecReload=/bin/kill -USR1 $MAINPID
BindReadOnlyPaths=/usr/bin:/usr/bin
BindReadOnlyPaths=/usr/lib:/usr/lib

[Install]
WantedBy=multi-user.target
